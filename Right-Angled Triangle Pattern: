#include <iostream>
using namespace std;

int main() {
    int rows;

    cout << "Enter the number of rows: ";
    cin >> rows;

    for (int i = 1; i <= rows; ++i) {          // Outer loop for each row
        for (int j = 1; j <= i; ++j) {         // Inner loop for printing stars
            cout << "* ";
        }
        cout << endl;                          // New line after each row
    }

    return 0;
}
